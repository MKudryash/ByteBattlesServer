{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "auth-service": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/auth/{**catch-all}" }
        ]
      },
      "task-service": {
        "ClusterId": "task-cluster",
        "Match": {
          "Path": "/api/task/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/task/{**catch-all}" }
        ]
      },
      "language-service": {
        "ClusterId": "task-cluster",
        "Match": {
          "Path": "/api/language/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/language/{**catch-all}" }
        ]
      },
      "user-profile-service": {
        "ClusterId": "user-profile-cluster",
        "Match": {
          "Path": "/api/user-profiles/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/user-profiles/{**catch-all}" }
        ]
      },
      "solution-service": {
        "ClusterId": "solution-cluster",
        "Match": {
          "Path": "/api/solution/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/solution/{**catch-all}" }
        ]
      },
      "compiler-service": {
        "ClusterId": "compiler-cluster",
        "Match": {
          "Path": "/api/compiler/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/compiler/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "http://authservices:8080/"
          }
        }
      },
      "task-cluster": {
        "Destinations": {
          "task-service": {
            "Address": "http://taskservices:8080/"
          }
        }
      },
      "user-profile-cluster": {
        "Destinations": {
          "user-profile-service": {
            "Address": "http://userprofileservices:8080/"
          }
        }
      },
      "solution-cluster": {
        "Destinations": {
          "solution-service": {
            "Address": "http://solutionservices:8080/"
          }
        }
      },
      "compiler-cluster": {
        "Destinations": {
          "compiler-service": {
            "Address": "http://codeexecution:8080/"
          }
        }
      }
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Secret": "your-super-secret-key-that-is-at-least-32-characters-long-here",
    "Issuer": "ByteBattlesAuthService",
    "Audience": "ByteBattlesClients",
    "ExpiresInMinutes": 60
  }
}